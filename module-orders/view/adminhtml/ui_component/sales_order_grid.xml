<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <exportButton name="export_button">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/export</item>
                    <item name="selectProvider" xsi:type="string">sales_order_grid.sales_order_grid.sales_order_columns.ids</item>
                    <item name="options" xsi:type="array">
                        <item name="customer_details_export" xsi:type="array">
                            <item name="value" xsi:type="string">csv_customer</item>
                            <item name="label" xsi:type="string" translate="true">Export Customer Details</item>
                            <item name="url" xsi:type="string">orders/export/customer</item>
                        </item>
                    </item>
                </item>
            </argument>                
        </exportButton>
    </listingToolbar>
</listing>
